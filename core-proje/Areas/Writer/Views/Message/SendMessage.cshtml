@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Gönder</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <input asp-for="WriterMessageID" hidden />
                <div class="form-group">
                    <label for="exampleInputName1">Alıcı Mail</label>
                    <input type="text" asp-for="Receiver" class="form-control" id="exampleInputName1" placeholder="Alıcı mail adresi">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Konu</label>
                    <input type="text" asp-for="Subject" class="form-control" id="exampleInputName1" placeholder="Konuyu giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj</label>
                    <input type="text" asp-for="MessageContent" class="form-control" id="exampleInputName1" placeholder="Mesajı giriniz">
                </div>
     
        <button class="btn btn-primary mr-2">Gönder</button>
        </form>
           </div>
    </div>
</div>

