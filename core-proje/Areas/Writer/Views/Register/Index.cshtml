@model core_proje.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Yazar Kayıt</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Bir hesabın yok mu?</h4>
                            <h6 class="font-weight-light">2 Dakikada sisteme kaydını gerçekleştirebilirsin.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Adınızı Giriniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Soyadınızı Giriniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Fotğraf url Giriniz">
                                </div>
                                   <div class="form-group">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Kullanıcı adınızı Giriniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="Password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifreniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="Password" asp-for="ConfirmPassword"  class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre tekrar">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="email" asp-for="Mail" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Mail Adresiniz">
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    @*<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="Index">KAYIT OL</a>*@
                                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">KAYIT OL</button>
                                </div>
               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>
