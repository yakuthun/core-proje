@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Yeni Ekleme Paneli </p>

            <form method="post" asp-controller="Portfolio" asp-action="AddPortfolio" id="addform">
                <label>Proje Başlığı</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label>Platform</label>
                <input type="text" asp-for="Platform" class="form-control" />
                <br />
                <label>Proje Linki</label>
                <input type="text" asp-for="ProjectUrl" class="form-control" />
                <br />
                <label>Fiyat</label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
                <br />
                <label>Statü</label>
                <input type="text" asp-for="Status" class="form-control" />
                <br />
                <label>Tamamlanma Oranı</label>
                <input type="text" asp-for="Value" class="form-control" />
                <br />
                <label>Görsel 1</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <br />
                <label>Görsel 2</label>
                <input type="text" asp-for="ImageUrl2" class="form-control" />
                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                <br />

                <br />
                <button class="btn btn-block btn-lg btn-outline-light">Kaydet</button>
            </form>


        </div>
    </div>
</div>


