@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

 <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Referans Listesi</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>

                            <th> # </th>
                            <th> Ad Soyad </th>
                            <th> Şirket </th>
                            <th> Ünvan </th>
                            <th> Sil </th>
                            <th> Detaylar </th>

                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                        {
                            
                        
                          <tr>
                                <td> @item.TestimonialID </td>
                            <td>
                              <img src="@item.ImageUrl" alt="image" />
                              <span class="pl-2">@item.ClientName</span>
                            </td>
                          
                            <td> @item.Company </td>
                            <td> @item.Title </td>
                            <td> <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a> </td>
                            <td> <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Detaylar</a> </td>

                          </tr>
                        }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
               <br />
                <a href="/Testimonial/AddTestimonial/" class="btn btn-block btn-lg btn-outline-info">Referans Ekle</a>