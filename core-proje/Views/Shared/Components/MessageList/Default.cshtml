@using EntityLayer.Concrete
@model List<Message>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <p class="text-muted mb-1 small">Hepsini Gör</p>
            </div>
            <div class="preview-list">
              @foreach (var item in Model)
                {
                <div class="preview-item border-bottom">
                    <div class="preview-item-content d-flex flex-grow">
                        <div class="flex-grow">
                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                <h6 class="preview-subject">@item.Name</h6>
                                <p class="text-muted text-small">@item.Date</p>
                            </div>
                           
                                @if (item.Content.Length > 35)
                                    { <p class="text-muted">
                                        @item.Content.Substring(0,34)...
                                          </p>
                                    }
                                    else
                                    {
                                        <p class="text-muted">
                                        @item.Content
                                          </p>
                                    }
                         
                        </div>
                    </div>
                </div>
               }
            </div>
        </div>
    </div>
</div>