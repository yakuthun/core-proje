@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <h3 class="mb-0">Yetenek Düzenleme</h3>
        </div>
    </div>
    <div class="card-body pl-lg-4">
        <div class="row">
            <div class="col-lg-12">

                <form asp-controller="About" asp-action="Index" method="post">
                    <input asp-for="AboutID" hidden />
                    <label>Başlık</label>
                    <input asp-for="Title" class="form-control" />
                    <br />
                    <label>Açıklama</label>
                    <input asp-for="Description" class="form-control" />
                    <br />
                    <label>Yaş</label>
                    <input asp-for="Age" class="form-control" />
                    <br />
                   <label>Mail</label>
                    <input asp-for="Mail" class="form-control" />
                    <br />
                   <label>Telefon</label>
                    <input asp-for="Phone" class="form-control" />
                    <br />
                   <label>Adres</label>
                    <input asp-for="Address" class="form-control" />
                    <br />
                   <label>Fotoğraf Adresi</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-block btn-lg btn-primary">Kaydet</button>
                </form>


            </div>
        </div>
    </div>
</div>
